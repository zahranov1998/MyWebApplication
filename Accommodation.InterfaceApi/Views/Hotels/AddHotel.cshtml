@{
    Layout = "~/Views/_Shared/_LayoutPage.cshtml";
}
@model Accommodation.Application.Contract.Hotels.DTO.HotelDTO
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    @*<header class="container-fluid text-center bg-body-tertiary border-bottom  py-2" style="height: 5vh;">
    </header>*@


    <Main class="container-fluid py-2">
        @using (Html.BeginForm())
        {
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        Hotel Native Nam
                        </div>
                    <div class="col-4">
                        Hotel Latin Name
                    </div>
                    <div class="col-4">
                        District
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row ">
                    <div class="col-4">
                        @Html.EditorFor(a => Model.NativeName)
                    </div>
                    <div class="col-4">
                        @Html.EditorFor(a => Model.LatinName)

                    </div>
                    <div class="col-4">
                        @Html.EditorFor(a => Model.District)

                    </div>
                </div>
            </div>
            <br>
            <div class="container">
                <div class="row ">
                    <div class="col-4">
                        City Name
                    </div>
                    <div class="col-4">
                        City Latin Name
                    </div>
                    <div class="col-4">
                        County Name
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row ">
                    <div class="col-4">
                        <input type="text">
                    </div>
                    <div class="col-4">
                        <input type="text">
                    </div>
                    <div class="col-4">
                        <input type="text">
                    </div>
                </div>
            </div>
            <br>
            <div class="container">
                <div class="row ">
                    <div class="col-4">
                        Count Of Single Room
                    </div>
                    <div class="col-4">
                        Count Of Double Room
                    </div>
                    <div class="col-4">
                        Count Of Triple Room
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row ">
                    <div class="col-4">
                        <input type="text">
                    </div>
                    <div class="col-4">
                        <input type="text">
                    </div>
                    <div class="col-4">
                        <input type="text">
                    </div>
                </div>
            </div>
            <br/>
            <div class="container text-center mt-2">
                <div class="row col-11">
                    Amenities
                </div>
                <div class="row ">

                    <div class="col-11">
                        Pool
                        <input type="checkbox">
                        Parking
                        <input type="checkbox">
                        Gym
                        <input type="checkbox">
                        Restaurant
                        <input type="checkbox">
                        Park
                        <input type="checkbox">
                        Library
                        <input type="checkbox">
                        Cafe
                        <input type="checkbox">
                        Sauna
                        <input type="checkbox">

                    </div>
                </div>
            </div>
            <br>
            <div class="container text-center">
                <div class="row col-11">
                    Description
                </div>
                <div class="row ">

                    <div class="col-11">
                        <textarea name="Text1" cols="160" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <br>
            <div class="container text-center">
                <div class="row col-11">
                    Rules
                </div>
                <div class="row ">

                    <div class="col-11">
                        <textarea name="Text1" cols="160" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <br>
            <br>
            <div class="container">
                <div class="row ">
                    <div class="col-6 text-end">
                        <input type="submit" value="Save" />
                        @*@Html.ActionLink("Save","AddHotel")*@
                    </div>
                    <div class="col-6">
                        <button>Cancel</button>
                    </div>
                </div>
            </div>
        }

    </Main>
</body>
</html>

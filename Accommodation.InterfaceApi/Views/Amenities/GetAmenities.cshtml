@{
    ViewBag.Title = "Amenities";
    Layout = "~/Views/_Shared/_LayoutPage.cshtml";
}
@model List<Accommodation.Application.Contract.Amenities.DTO.AmenityDTO>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
</head>
<body>

    <div class="container text-center">
        <div class="row ">
            <div >
                Amenity Title:
            </div>
        </div>
        <div class="row my-3">
            <div>
                <input type="text">
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button >Add</button>
            </div>
        </div>
    </div>
    <br/>
    <br/>

    <div class="border">
        <div class="row text-secondary text-center">
            <div class="col-2">Amenity Title</div>
            <div class="col-2">Operation</div>
        </div>
    </div>
@foreach (var amenity in Model)
{
    <div class="border">
        <div class="row text-secondary text-center">
            <div class="col-6">@amenity.Title</div>
            <div class="col-6">edit/delete</div>
        </div>
    </div>
}


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>


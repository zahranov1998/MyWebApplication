<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
</head>
<body>
    <header class="container-fluid text-center bg-body-tertiary border-bottom  py-2" style="height: 5vh;">
        <div class="row">
            <div class="col-10 justify-start d-flex">
                <div class="row">
                    <div class="col">
                        @Html.ActionLink("Hotels","Index","Hotels")
                    </div>
                    <div class="col">
                        
                        @Html.ActionLink("Amenities" , "Index" , "Amenities")
                        @*<a href="/amenities"> Amenities</a>*@
                    </div>

                </div>

            </div>
            <div class="col-2">
                <div>
                    @Html.ActionLink("Log Out" , "","")
                </div>

            </div>
        </div>
    </header>


    <main class="container-fluid py-2">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>
</html>
